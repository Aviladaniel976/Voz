<%- include("partials/header.ejs") -%>

<div class="container">
    <main>
      <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary new-color">Progreso</span>
            <span class="badge bg-primary rounded-pill new-color-background">      50%</span>
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div>
                <h6 class="my-0">Introducción</h6>
                <small class="text-muted">Presentación al estudio.</small>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between bg-light">
              <div>
                <h6 class="my-0">Segmento Demográfico</h6>
                <small class="text-muted">Datos Personales</small>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div>
                <h6 class="my-0">Segmento de interés</h6>
                <small class="text-muted">Cuestionario</small>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
              <div>
                <h6 class="my-0">Final</h6>
                <small class="text-muted">Cierre de la encuesta</small>
              </div>
            </li>
          </ul>
  
          <form class="card p-2" action="/page2" method="post">
            <div class="input-group d-grid gap-2">
              <button type="submit" class="btn btn-secondary new-color-background">Continuar</button>
            </div>
          </form>
        </div>
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">Datos Personales</h4>
          <form class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-sm-12">
                <label for="firstName" class="form-label">¿Cuanto tiempo estimas trabajar en esta Organización?</label>
                <select class="form-select" id="country" required>
                    <option value="">Seleccione...</option>
                    <option> Entre 1 y 6 meses </option>
                    <option> Entre 7 meses y 1 año </option>
                    <option> Más de 1 año, pero menos de 3 años </option>
                    <option> Más de 3 años </option>
                  </select>
                <div class="invalid-feedback">
                  *Campo obligatorio!
                </div>
              </div>

              <div class="col-md-6">
                <label for="zip" class="form-label">Edad</label>
                <select class="form-select" id="state" required>
                    <option value="">Seleccione...</option>
                    <option> 18 - 21 </option>
                    <option> 22 - 29 </option>
                    <option> 30 - 40 </option>
                    <option> 41 - 50 </option>
                    <option> 51 - 60 </option>
                    <option> Más de 60 </option>
                  </select>
                <div class="invalid-feedback">
                  *Campo obligatorio!
                </div>
              </div>
  
              <div class="col-md-6">
                <label for="state" class="form-label">Género</label>
                <select class="form-select" id="state" required>
                  <option value="">Seleccione...</option>
                  <option> Neutro </option>
                  <option> Femenino </option>
                  <option> Masculino </option>
                </select>
                <div class="invalid-feedback">
                  *Campo obligatorio!
                </div>
              </div>

              <div class="col-sm-12">
                <label for="firstName" class="form-label">Mencione su antieguedad</label>
                <select class="form-select" id="country" required>
                    <option value="">Seleccione...</option>
                    <option> Entre 0 y 6 meses </option>
                    <option> Más de 6 meses hasta 1 año </option>
                    <option> Más de 1 año hasta 2 años </option>
                    <option> Más de 2 año hasta 5 años </option>
                    <option> Más de 5 año hasta 10 años </option>
                    <option> Más de 10 años </option>
                  </select>
                <div class="invalid-feedback">
                  *Campo obligatorio!
                </div>
              </div>
                <br>
                <br>
                <br>

          </form>
        </div>
      </div>
    </main>

</div>

<%- include("partials/footer.ejs") -%>